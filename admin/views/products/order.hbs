<div>
  <h1 class="text-center">Order</h1>
  <table class="table table-hover mt-5">
    <thead class="thead-dark">
    <tr>
      <th>username</th>
      <th>phone</th>
      <th>Address</th>
      <th>products</th>
      <th>totalOrder</th>
      <th>status</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each order}}
    <tr>
      <td>
        {{this.username}}
      </td>
      <td>
        {{this.userPhone}}
      </td>
      <td>
        {{this.address}}
      </td>
      <td>
        {{#each this.products}}{{this.product.name}} - size : {{this.size}} - quantity : {{this.quantity}} <br> {{/each}}
      </td>
      <td>
        ${{this.totalOrder}}
      </td>
      <td>
        <a href=order/{{this._id}}>{{this.completed}}</a>
      </td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>